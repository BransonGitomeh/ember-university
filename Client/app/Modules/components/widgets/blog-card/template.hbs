<div class="blog-card hoverable">
<div class="card">
    <div class="card-image">
        <img src="{{logo}}" alt="blog-img">
    </div>

    <div class="card-content">
        <p class="row">
          <span class="left"><a href="">{{speciality}}</a></span>
          <span class="right">{{started}}</span>
        </p>
        <h4 class="card-title grey-text text-darken-4"><a class="grey-text text-darken-4">
          {{title}}
        </a>
        </h4>
        <div class="row">
          <div class="col s2">
            <img src="{{ownerpic}}" alt="" class="circle responsive-img valign profile-image">
          </div>
          <div class="col s9"> Owned by <a>{{ownername}}</a></div>
        </div>
    </div>

</div>
</div>
